{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "lib": [
      "es2019"
    ],
    "baseUrl": "./",
    "outDir": "./build",
    "rootDirs": [
      "./src"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/interfaces"
    ],
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": false,
    "incremental": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "jest",
    "test",
    "config-overrides.js",
    "test.js"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
